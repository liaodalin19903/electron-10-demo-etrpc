{
  "compilerOptions": {
     "baseUrl": ".",
     "paths": {
       "@main/*": ["src/main/*"],
       "@renderer/*": ["src/renderer/src/*"],
       "@shared/*": ["src/shared/*"]
     },
     "jsx": "react",
     "lib": [
        "es5",
        "es6",
        "dom",
        "dom.iterable",
        "scripthost"
     ],
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "sourceMap": true
  },
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.web.json" }]
}
